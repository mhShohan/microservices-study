{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES6"],
    "module": "nodenext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
