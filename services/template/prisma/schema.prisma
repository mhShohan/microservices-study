generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  DRAFT
  PUBLISHED
  UNLISTED
}

model Product {
  id          String   @id @default(cuid())
  sku         String   @unique
  inventoryId String?
  name        String
  description String?
  price       Float    @default(0)
  status      Status   @default(DRAFT)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
